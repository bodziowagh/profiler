{
  "compilerOptions": {
      "module": "es6",
      "target": "es5",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "allowJs": true,
      "esModuleInterop": true,
      "noImplicitReturns": false,
      "noImplicitThis": false,
      "jsx": "react",
      "moduleResolution": "node",
      "lib": [
          "dom",
          "scripthost",
          "es2015",
          "es2016",
          "es2017",
          "esnext",
          "esnext.asynciterable"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
